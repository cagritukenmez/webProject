@model myProject.Models.Kullanıcı
<div class="container mt-5 ">
    <div class="row justify-content-center ">
        <div class="col-md-6">
            <div class="card bg-dark">
                <div class="card-header text-center">
                    <h3>Giriş Yap</h3>
                </div>
                <div class="card-body">
                    @if(TempData["msj"] != null)
                    {
                        <div class="alert alert-danger" role="alert">@TempData["msj"]</div>
                    }
                    <form method="post" asp-action="GirisYap">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="kullaniciAdi" class="control-label"></label>
                            <input asp-for="kullaniciAdi" class="form-control " style="background-color: #343a40; color: #ffffff; border: 1px solid #495057;" />
                            <span asp-validation-for="kullaniciAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="kullaniciSifre" class="control-label"></label>
                            <input asp-for="kullaniciSifre" class="form-control" type="password" style="background-color: #343a40; color: #ffffff; border: 1px solid #495057;" />
                            <span asp-validation-for="kullaniciSifre" class="text-danger" ></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Giriş Yap" class="btn btn-secondary" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Kullanıcı" asp-action="KayitOl" class="btn btn-link" style="color: #ffffff;">Hesabınız yok mu? Kayıt Olun</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
