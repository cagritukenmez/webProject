@model myProject.Models.Personeller


<h1>Personel Düzenle</h1>

<div class="alert-danger">@TempData["msj"]</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method = "post" asp-action="PersonelDuzenleAcil">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="personelID"/>
            <div class="form-group">
                <label asp-for="isim" class="control-label"></label>
                <input asp-for="isim" class="form-control" value="@Model.isim"/>
                <span asp-validation-for="isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="soyisim" class="control-label"></label>
                <input asp-for="soyisim" class="form-control" value="@Model.soyisim" />
                <span asp-validation-for="soyisim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eposta" class="control-label"></label>
                <input asp-for="eposta" class="form-control" value="@Model.eposta"/>
                <span asp-validation-for="eposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telNo" class="control-label"></label>
                <input asp-for="telNo" class="form-control" value="@Model.telNo"/>
                <span asp-validation-for="telNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a asp-controller="Personel" asp-action="PersonelGoruntule" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
