@model myProject.Models.Personeller

@{
    ViewData["Title"] = "PersonelOlustur";
}

<h2>Personel Oluştur</h2>

<div class="alert-danger">@TempData["danger"]</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="PersonelOlustur">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="isim" class="control-label"></label>
                <input asp-for="isim" class="form-control" />
                <span asp-validation-for="isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="soyisim" class="control-label"></label>
                <input asp-for="soyisim" class="form-control" />
                <span asp-validation-for="soyisim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eposta" class="control-label"></label>
                <input asp-for="eposta" class="form-control" />
                <span asp-validation-for="eposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telNo" class="control-label"></label>
                <input asp-for="telNo" class="form-control" />
                <span asp-validation-for="telNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="salonID" value="@ViewBag.salonID" class="form-control" style="display:inline;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-controller="BerberSalonu" asp-action="AdminPaneli" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
