@model List<myProject.Models.Personeller>

@{
    ViewData["Title"] = "Personel Görüntüle";
}

<h2>Personel Görüntüle</h2>
<div class="alert-danger">@TempData["danger"]</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().isim)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().soyisim)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().eposta)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().telNo)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.isim</td>
                <td>@personel.soyisim</td>
                <td>@personel.eposta</td>
                <td>@personel.telNo</td>
                <td>

                    <form asp-action="PersonelDuzenle" method="get" style="display:inline;">
                        <input type="hidden" name="personelID" value="@personel.personelID" />
                        <button type="submit" class="btn btn-primary">Duzenle</button>
                    </form>
                    <form asp-action="PersonelSil" method="get" style="display:inline;">
                        <input type="hidden" name="personelID" value="@personel.personelID" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                    <form asp-controller="Hizmet" asp-action="HizmetGoruntule" method="get" style="display:inline;">
                        <input type="hidden" name="personelID" value="@personel.personelID" />
                        <button type="submit" class="btn btn-primary">Hizmetler</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <form asp-action="PersonelOlustur" method="get" style="display:inline;">
        <input type="hidden" name="salonID" value="@ViewBag.salonID" />
        <button type="submit" class="btn btn-primary">Personel Ekle</button>
    </form>
    <a method="get" asp-controller="BerberSalonu" asp-action="AdminPaneli" class="btn btn-secondary">Geri Dön</a>
</div>
