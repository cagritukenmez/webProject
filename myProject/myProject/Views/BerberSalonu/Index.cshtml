    <!DOCTYPE html>
    <html>
    <head>
        <title>Berber Salonu</title>
    </head>

    <body>
        <header>
            <div style="position: absolute; top: 10px; right: 10px;">
                @if (ViewBag.IsLoggedIn == false)
                {
                    <a asp-controller="Kullanıcı" asp-action="KayitOl" class="btn btn-primary">Kayıt Ol</a>
                    <a asp-controller="Kullanıcı" asp-action="GirisYap" class="btn btn-light">Giriş Yap</a>
                }
                else
                {
                    @if(ViewBag.Role == "Admin"){
                        <a asp-action="AdminPaneli" class="btn btn-dark" >Admin Paneli</a>
                    }
                    else {
                        <a asp-controller="Randevu" asp-action="RandevduAl" class="btn btn-success">Randevu Al</a>
                    }
                    <a asp-controller="Randevu" asp-action="RandevuGoruntule" class="btn btn-success">Randevu Goruntule</a>
                    <a asp-controller="Kullanıcı" asp-action="CikisYap" class="btn btn-danger" >Çıkış Yap</a>
                }
            </div>
        </header>
        <main>
        <div class="alert-danger"> @TempData["msj"] </div>
            <h1>Berber Salonu Anasayfa</h1>
            <p>Buraya ana içerik gelecek...</p>
        </main>
    </body>
    </html>
