    <form asp-action="HizmetSil">
        <input type="hidden" asp-for="hizmetID" />
        <input type="submit" value="Eminim, Sil!" class="btn btn-danger" />
        <a asp-action="HizmetGoruntule" asp-route-personelID="@Model.personelID class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
