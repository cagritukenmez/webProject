@model myProject.Models.Hizmetler

@{
    ViewData["Title"] = "HizmetSil";
}

<h1>HizmetSil</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Hizmetler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hizmetAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hizmetAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hizmetSuresi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hizmetSuresi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hizmetFiyat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hizmetFiyat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Personel.isim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Personel.eposta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Berbersalonu.salonAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Berbersalonu.salonAd)
        </dd>
    </dl>
    
    <form asp-action="HizmetSil" method="post" style="display:inline;">
        <input type="hidden" name="hizmetID" value="@Model.hizmetID" />
        <button type="submit" class="btn btn-danger">Hizmet Sil</button>
    </form>
    <form asp-action="HizmetGoruntule" method="get" style="display:inline;">
        <input type="hidden" name="personelID" value="@Model.personelID" />
        <button type="submit" class="btn btn-light">Geri Donl</button>
    </form>
</div>
